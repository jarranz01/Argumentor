<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editDebateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/debate_title"
            android:inputType="text"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editDebateDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/debate_description"
            android:inputType="textMultiLine"
            android:minLines="3" />
    </com.google.android.material.textfield.TextInputLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_your_position"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>
        
    <RadioGroup
        android:id="@+id/radioGroupPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <RadioButton
            android:id="@+id/radioPositionFavor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_favor"
            android:checked="true" />
            
        <RadioButton
            android:id="@+id/radioPositionAgainst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_against" />
    </RadioGroup>

</LinearLayout>