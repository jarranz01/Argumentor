<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textDebateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="¿Es ético el uso de la IA en la toma de decisiones médicas?" />

        <TextView
            android:id="@+id/textDebateDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            tools:text="Debate sobre los aspectos éticos del uso de inteligencia artificial para diagnosticar y recomendar tratamientos médicos." />

        <TextView
            android:id="@+id/textDebateAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            tools:text="Creado por: Usuario123" />
            
        <TextView
            android:id="@+id/textAvailablePosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textStyle="italic"
            android:textColor="@android:color/holo_blue_dark"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            tools:text="Posición disponible: En contra" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonJoinDebate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="@string/join_debate"
            app:backgroundTint="@android:color/holo_green_light" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>